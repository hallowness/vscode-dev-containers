# Window dimensions
WIDTH = 800
HEIGHT = 600

# Initialize Pygame
pygame.init()
pygame.display.set_mode((WIDTH, HEIGHT), DOUBLEBUF | OPENGL)

# Set up OpenGL perspective
gluPerspective(45, (WIDTH / HEIGHT), 0.1, 3000.0)

# Set initial camera position
glTranslatef(0.0, 0.0, -500)

# Function to draw the green mountains
def draw_mountains():
    glColor3f(0.0, 0.8, 0.0)  # Set color to green
    glBegin(GL_TRIANGLES)
    # Draw triangle strips for the mountains
    for x in range(-1500, 1500, 100):
        for z in range(-1500, 1500, 100):
            glVertex3f(x, 0, z)
            glVertex3f(x + 100, 0, z)
            glVertex3f(x + 50, 200, z + 50)
    glEnd()

# Main game loop
while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            quit()

    glRotatef(1, 1, 1, 1)  # Rotate the view
    glClear(GL_COLOR_BUFFER_BIT | GL_DEPTH_BUFFER_BIT)

    draw_mountains()

    pygame.display.flip()
    pygame.time.wait(10)
    
